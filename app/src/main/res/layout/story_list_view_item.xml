<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/story_list_view_image_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/story_list_view_large_text_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/story_list_view_image_view"
            android:layout_toEndOf="@id/story_list_view_image_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ff000000"
            android:textSize="17dp"
            android:paddingLeft="3dp"/>

        <TextView
            android:id="@+id/story_list_view_small_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_below="@id/story_list_view_large_text_view"
            android:layout_toRightOf="@id/story_list_view_image_view"
            android:layout_toEndOf="@id/story_list_view_image_view"
            android:layout_alignBottom="@id/story_list_view_image_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="2dp" />
</RelativeLayout>
</FrameLayout>
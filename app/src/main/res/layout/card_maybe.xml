<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPadding="4dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/story_list_view_image_view"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/story_list_view_large_text_view"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/story_list_view_image_view"
                android:layout_toEndOf="@id/story_list_view_image_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:paddingLeft="3dp"/>

            <TextView
                android:id="@+id/story_list_view_small_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:layout_below="@id/story_list_view_large_text_view"
                android:layout_toRightOf="@id/story_list_view_image_view"
                android:layout_toEndOf="@id/story_list_view_image_view"
                android:layout_alignBottom="@id/story_list_view_image_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="2dp" />
        </RelativeLayout>
</android.support.v7.widget.CardView>

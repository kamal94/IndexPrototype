<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPadding="4dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/story_list_view_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="7"
            android:layout_alignTop="@id/story_list_view_image_view"
            android:layout_alignBottom="@id/story_list_view_image_view"
            android:layout_toRightOf="@id/story_list_view_image_view"
            android:layout_toEndOf="@id/story_list_view_image_view">
            <TextView
                android:id="@+id/story_list_view_large_text_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/sample_story_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_weight="4"/>


            <TextView
                android:id="@+id/story_list_view_small_text_view"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/sample_story_byline"
                android:textColor="@color/secondary_text_color"
                android:textSize="10sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_weight="3"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
